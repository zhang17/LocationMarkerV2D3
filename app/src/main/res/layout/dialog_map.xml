<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edit_text_location_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="location name"/>
    <RadioGroup
        android:id="@+id/radio_group_categories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_button_shopping"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/radio_button_Eating"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Eating"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/radio_button_Living"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Living"
            android:checked="false"/>
        <RadioButton
            android:id="@+id/radio_button_Entertaining"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Entertaining"
            android:checked="false"/>
    </RadioGroup>
    <EditText
        android:id="@+id/edit_text_descriptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="description about this place"/>

</LinearLayout>
